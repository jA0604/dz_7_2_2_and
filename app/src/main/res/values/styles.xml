<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="ToolBarTitleTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ColorStyleButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondaryLight</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

</resources>